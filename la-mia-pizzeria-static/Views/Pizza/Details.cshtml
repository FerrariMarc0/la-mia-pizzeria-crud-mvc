@model Pizza

<div class="container mt-5">
    <div class="card container border-3 border-danger rounded p-5" style="width: 25rem; margin-top: 10rem;">
        <img src="@Model.UrlImage" class="card-img-top" alt="...">
        <div class="card-body">
            <p class="card-text">@Model.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Nome: @Model.Name</li>
            <li class="list-group-item">Prezzo: @Model.Price</li>
        </ul>
        <div class="card-body text-center d-flex justify-content-between">
            <a class="btn-outline-info px-3 py-1 rounded text-primary fs-2" href="@Url.Action("Index", "Pizza")" title="Torna indietro" tabindex="-1" role="button" aria-disabled="true"><i class="fa-solid fa-arrow-left"></i></a>
            <a class="btn-outline-secondary px-3 py-1 rounded text-warning fs-2" href="@Url.Action("Edit", "Pizza")" title="Modifica" tabindex="-1" role="button" aria-disabled="true"><i class="fa-regular fa-pen-to-square"></i></a>
            <a class="btn-outline-warning px-3 py-1 rounded text-danger fs-2" href="@Url.Action("Details", "Pizza")" title="Elimina" tabindex="-1" role="button" aria-disabled="true"><i class="fa-regular fa-trash-can"></i></a>
        </div>
    </div>
</div>