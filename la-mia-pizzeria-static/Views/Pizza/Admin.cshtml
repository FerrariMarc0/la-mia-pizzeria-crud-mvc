

@{
    ViewData["Title"] = "Admin";
}
@model List<Pizza>

@if(Model.Count() == 0)
{
    <h1>Nessun risultato da mostrare</h1>
}
else
{
    <div class="container" style="margin-top: 5rem">
        <table class="table table-bordered border-primary">
            <thead>
                <tr class="align-middle text-center">
                    <th scope="col">ID</th>
                    <th scope="col">Immagine</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrizione</th>
                    <th scope="col">Prezzo</th>
                    <th scope="col">Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Pizza pizza in Model)
                {
                    <tr class="align-middle text-center">
                        <th scope="row">@pizza.Id</th>
                        <td><img class="w-25" src="@pizza.UrlImage" /></td>
                        <td>@pizza.Name</td>
                        <td><p>@pizza.Description</p></td>
                        <td><span>€ @pizza.Price</span></td>
                        <td class="d-flex gap-2 mt-4">
                            <a class="btn-primary rounded" href="@Url.Action("Details", "Pizza", new {id = pizza.Id})">Dettagli</a>
                            <a class="btn-warning rounded" href="@Url.Action("Details", "Pizza")">Modifica</a>
                            <a class="btn-danger rounded" href="@Url.Action("Details", "Pizza")">Elimina</a>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
}

